{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "rootDir": "./src",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false
  },
  "include": [
    "src/cli/**/*",
    "src/lib/**/*",
    "src/mcp/**/*",
    "src/agents/**/*",
    "src/tools/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/app/**/*",
    "src/components/**/*"
  ]
}
